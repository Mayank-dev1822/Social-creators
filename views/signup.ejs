<body>
    <h1>Sign Up</h1>

    <div class="container-fluid">

        <form action="/register" method="post">

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4"> First Name</label>
                    <input name="userName" type="Fname" class="form-control" id="inputfname" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputusername">Last Name</label>
                    <input type="username" class="form-control" id="inputuserLname" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputusername">Email</label>
                    <input name="username" type="username" class="form-control" id="inputusername">
                </div>
                <div class="form-group col-md-6" id="role">
                    <label for="inputState">Role</label>
                    <select id="inputState" class="form-control">
                        <option selected>Choose...</option>
                        <option>Student</option>
                        <option>Teacher</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Password</label>
                    <input name="password" type="password" class="form-control" id="inputPassword4">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Confirm Password</label>
                    <input type="password" class="form-control" id="inputPassword4">
                </div>
            </div>
            <br>
            <br>
            <div class="d-flex justify-content-center">
                <button class="button button-purple d-flex justify-content-center" type="submit" id="btn">Sign
                    Up</button>
            </div>
            <br>
            <div class="col-sm oAuth"></div>
            <div class="card social-block">
                <div class="card-body" style="margin: 0px 0px 0px 0px !important; padding: 0rem !important;">
                    <a class="btn btn-block" href="/auth/google" role="button">
                        <i class="fab fa-google"></i>
                        <img width="70" src="img/source.gif" alt="">
                        Sign Up with:
                        <hr>
                       
                    </a>
                </div>
            </div>
    </div>
    </div>


    </form>
    </div>



    <style>
        body {
            background-image: url("img/bg-2.jpg");
            background-size: cover;
            background-repeat: no-repeat;
        }

        .container-fluid {
            border: 2px solid black;
            border-radius: 10px;
            box-shadow: 10px 10px 5px grey;
            height: 530px;
            width: 750px !important;
            background-color: white;
        }

        form {
            padding: 25px 0px 0px 0px;
        }


        h1 {
            padding: 15px;
            text-align: center;
            font-size: 60px;
            font-family: "Oswald", sans-serif;
        }

        .button {

            border-radius: 10px;
            color: white;
            padding: 6px 28px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

        .button-purple {
            background-color: white;
            color: black;
            border: 2px solid #7579e7;



        }

        .button-purple:hover {
            background-color: #7579e7;
            color: white;
        }

        @media only screen and (max-width: 600px) {
            .container-fluid {
                height: 750px;
